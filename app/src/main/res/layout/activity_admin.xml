<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/editTripsButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:onClick="editTrips"
        android:text="Lıst Trips"
        app:layout_constraintEnd_toStartOf="@+id/editProfilesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editProfilesButton" />

    <Button
        android:id="@+id/editProfilesButton"
        android:layout_width="162dp"
        android:layout_height="57dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="34dp"
        android:onClick="editUser"
        android:text="Edit User Profiles"
        app:layout_constraintBottom_toTopOf="@+id/addAdminButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTripsButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/approveDriverButton"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:onClick="addDriver"
        android:text="Add Drivers"
        app:layout_constraintBaseline_toBaselineOf="@+id/addAdminButton"
        app:layout_constraintEnd_toStartOf="@+id/addAdminButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addAdminButton"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="21dp"
        android:onClick="addAdmin"
        android:text="ADD AdMın"
        app:layout_constraintBottom_toTopOf="@+id/driverLicenseListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/approveDriverButton"
        app:layout_constraintTop_toBottomOf="@+id/editProfilesButton" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="228dp"
        android:layout_height="182dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toTopOf="@+id/editProfilesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminText"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/adminText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="ADMIN HOMEPAGE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/driverLicenseListButton"
        android:layout_width="186dp"
        android:layout_height="62dp"
        android:layout_marginBottom="203dp"
        android:onClick="listDriverLicense"
        android:text="Driver License List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addAdminButton" />
</androidx.constraintlayout.widget.ConstraintLayout>